<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/record_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@android:color/black"
        android:src="@drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/record_time_ago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/record_title"
        android:layout_toRightOf="@+id/record_image"
        android:gravity="center_vertical"
        android:text="1天前" />


    <TextView
        android:id="@+id/record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/record_image"
        android:gravity="center_vertical"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="hillo err"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/record_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record_title"
        android:layout_toRightOf="@+id/record_image"
        android:drawableLeft="@drawable/ic_menu_send"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:text="唐山" />

    <TextView
        android:id="@+id/record_see_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/ic_menu_gallery"
        android:gravity="center"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="1846" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/record_image"
        android:background="#f2f2f2" />

</RelativeLayout>

